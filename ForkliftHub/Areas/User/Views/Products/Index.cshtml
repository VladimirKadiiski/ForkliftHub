@model ForkliftHub.ViewModels.ProductListViewModel

<h1>Products</h1>

<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search..." class="form-control d-inline w-auto" />

    <select name="brandId" class="form-select d-inline w-auto">
        <option value="">All Brands</option>
        @foreach (var brand in Model.Brands!)
        {
            <option value="@brand.Value" selected="@(Model.SelectedBrandId?.ToString() == brand.Value)">
                @brand.Text
            </option>
        }
    </select>

    <select name="categoryId" class="form-select d-inline w-auto">
        <option value="">All Categories</option>
        @foreach (var category in Model.Categories!)
        {
            <option value="@category.Value" selected="@(Model.SelectedCategoryId?.ToString() == category.Value)">
                @category.Text
            </option>
        }
    </select>

    <select name="EngineId" class="form-select d-inline w-auto">
        <option value="">All Engines</option>
        @foreach (var engine in Model.Engines!)
        {
            <option value="@engine.Value" selected="@(Model.SelectedEngineId?.ToString() == engine.Value)">
                @engine.Text
            </option>
        }
    </select>

    <select name="MastTypeId" class="form-select d-inline w-auto">
        <option value="">All Mast Types</option>
        @foreach (var mastType in Model.MastTypes!)
        {
            <option value="@mastType.Value" selected="@(Model.SelectedMastTypeId?.ToString() == mastType.Value)">
                @mastType.Text
            </option>
        }
    </select>

    <select name="sortOrder" class="form-select d-inline w-auto">
        <option value="">Sort By Name</option>
        <option value="price_asc" selected="@(Model.SortOrder == "price_asc")">Price: Low to High</option>
        <option value="price_desc" selected="@(Model.SortOrder == "price_desc")">Price: High to Low</option>
    </select>

    <button type="submit" class="btn btn-primary">Apply</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Category</th>
            <th>Type</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Brand.Name</td>
                <td>@item.MachineModel.Name</td>
                <td>@item.Category.Name</td>
                <td>@item.ProductType.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-categoryId="@(Model.SelectedCategoryId?.ToString() ?? "")"
                   asp-route-brandId="@(Model.SelectedBrandId?.ToString() ?? "")"
                   asp-route-EngineId="@(Model.SelectedEngineId?.ToString() ?? "")"
                   asp-route-MastTypeId="@(Model.SelectedMastTypeId?.ToString() ?? "")"
                   asp-route-sortOrder="@Model.SortOrder">
                    Previous
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link"
                   asp-route-page="@i"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-categoryId="@(Model.SelectedCategoryId?.ToString() ?? "")"
                   asp-route-brandId="@(Model.SelectedBrandId?.ToString() ?? "")"
                   asp-route-EngineId="@(Model.SelectedEngineId?.ToString() ?? "")"
                   asp-route-MastTypeId="@(Model.SelectedMastTypeId?.ToString() ?? "")"
                   asp-route-sortOrder="@Model.SortOrder">
                    @i
                </a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-categoryId="@(Model.SelectedCategoryId?.ToString() ?? "")"
                   asp-route-brandId="@(Model.SelectedBrandId?.ToString() ?? "")"
                   asp-route-EngineId="@(Model.SelectedEngineId?.ToString() ?? "")"
                   asp-route-MastTypeId="@(Model.SelectedMastTypeId?.ToString() ?? "")"
                   asp-route-sortOrder="@Model.SortOrder">
                    Next
                </a>
            </li>
        }
    </ul>
</nav>


