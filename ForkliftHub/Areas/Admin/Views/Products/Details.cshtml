@model ForkliftHub.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div class="card mb-4">
    <div class="row g-0">
        <div class="col-md-4">
            @if (Model.ProductImages != null && Model.ProductImages.Any())
            {
                foreach (var image in Model.ProductImages)
                {
                    <img src="@Url.Content(image.ImageUrl)" alt="Product Image" class="img-fluid mb-2" style="max-width: 100%;" />
                }
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center bg-light" style="height: 100%; min-height: 250px;">
                    <span class="text-muted">No Images Available</span>
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <p class="card-text"><strong>Brand:</strong> @Model.Brand?.Name</p>
                <p class="card-text"><strong>Model:</strong> @Model.MachineModel?.Name</p>
                <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
                <p class="card-text"><strong>Product Type:</strong> @Model.ProductType?.Name</p>
                <p class="card-text"><strong>Engine:</strong> @Model.Engine?.Type</p>
                <p class="card-text"><strong>Mast Type:</strong> @Model.MastType?.Name</p>
                <p class="card-text"><strong>Lifting Height:</strong> @Model.LiftingHeight m</p>
                <p class="card-text"><strong>Closed Height:</strong> @Model.ClosedHeight m</p>
                <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
                <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            </div>
        </div>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
