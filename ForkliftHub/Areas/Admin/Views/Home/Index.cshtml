@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Welcome to the Admin Dashboard</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card border-primary h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Brands</h5>
                    <p class="card-text">Manage forklift brands.</p>
                    <a asp-controller="Brands" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-success h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Organize categories of forklifts.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-success">Manage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-warning h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Product Types</h5>
                    <p class="card-text">Manage product classifications.</p>
                    <a asp-controller="ProductTypes" asp-action="Index" class="btn btn-warning">Manage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-info h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Models</h5>
                    <p class="card-text">Manage forklift models.</p>
                    <a asp-controller="MachineModels" asp-action="Index" class="btn btn-info">Manage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-dark h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Engines</h5>
                    <p class="card-text">Manage engine types.</p>
                    <a asp-controller="Engines" asp-action="Index" class="btn btn-dark">Manage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-secondary h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Mast Types</h5>
                    <p class="card-text">Manage mast configurations.</p>
                    <a asp-controller="MastTypes" asp-action="Index" class="btn btn-secondary">Manage</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-danger h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Add, edit, and remove forklifts.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-danger">Manage</a>
                </div>
            </div>
        </div>

        <!-- Optional: Add a user manager card if needed -->
