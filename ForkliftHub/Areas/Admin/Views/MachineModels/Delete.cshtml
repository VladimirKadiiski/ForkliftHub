@model ForkliftHub.ViewModels.MachineModelDeleteViewModel

@{
    ViewData["Title"] = "Delete Machine Model";
}

<h1>Delete Machine Model</h1>

<h4>Are you sure you want to delete this model?</h4>
<hr />

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.BrandName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
