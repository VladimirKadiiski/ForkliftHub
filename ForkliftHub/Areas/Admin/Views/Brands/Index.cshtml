@{
    ViewData["Title"] = "Manage Brands";
}


@model IEnumerable<ForkliftHub.ViewModels.BrandViewModel>

<h1>Brands</h1>

<table class="table">
    <thead>
        <tr><th>Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@brand.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@brand.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add Brand</a>
