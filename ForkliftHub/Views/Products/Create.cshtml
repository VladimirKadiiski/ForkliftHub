@model ForkliftHub.Models.Product

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h1>Create Product</h1>

<form asp-action="Create">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Brand"></label>
        <select asp-for="Brand" asp-items="ViewBag.Brands" class="form-control"></select>
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MachineModel"></label>
        <select asp-for="MachineModel" asp-items="ViewBag.Models" class="form-control"></select>
        <span asp-validation-for="MachineModel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category" asp-items="ViewBag.Categories" class="form-control"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductType"></label>
        <select asp-for="ProductType" asp-items="ViewBag.ProductTypes" class="form-control"></select>
        <span asp-validation-for="ProductType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Engine"></label>
        <select asp-for="Engine" asp-items="ViewBag.Engines" class="form-control"></select>
        <span asp-validation-for="Engine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MastType"></label>
        <select asp-for="MastType" asp-items="ViewBag.MastTypes" class="form-control"></select>
        <span asp-validation-for="MastType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LiftingHeight"></label>
        <input asp-for="LiftingHeight" class="form-control" />
        <span asp-validation-for="LiftingHeight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClosedHeight"></label>
        <input asp-for="ClosedHeight" class="form-control" />
        <span asp-validation-for="ClosedHeight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}