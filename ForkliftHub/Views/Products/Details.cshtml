@model ForkliftHub.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>

<p><strong>Brand:</strong> @Model.Brand?.Name</p>
<p><strong>Category:</strong> @Model.Category?.Name</p>
<p><strong>Type:</strong> @Model.ProductType?.Name</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
<p><strong>Description:</strong> @Model.Description</p>

<a asp-action="Index">Back to List</a>
