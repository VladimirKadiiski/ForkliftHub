@model ForkliftHub.ViewModels.ProductListViewModel

@{
    ViewData["Title"] = "Home";
}

<h1 class="mb-4">Welcome to ForkliftHub</h1>

@if (Model.Products.Any())
{
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            Brand: @product.Brand?.Name <br />
                            Model: @product.MachineModel?.Name
                        </p>
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products available yet.</p>
}
