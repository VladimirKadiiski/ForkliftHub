@model ForkliftHub.ViewModels.ProductFormViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="BrandId"></label>
    <select asp-for="BrandId" asp-items="Model.Brands" class="form-control"></select>
    <span asp-validation-for="BrandId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="MachineModelId"></label>
    <select asp-for="MachineModelId" asp-items="Model.MachineModels" class="form-control"></select>
    <span asp-validation-for="MachineModelId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="EngineId"></label>
    <select asp-for="EngineId" asp-items="Model.Engines" class="form-control"></select>
    <span asp-validation-for="EngineId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="MastTypeId"></label>
    <select asp-for="MastTypeId" asp-items="Model.MastTypes" class="form-control"></select>
    <span asp-validation-for="MastTypeId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ProductTypeId"></label>
    <select asp-for="ProductTypeId" asp-items="Model.ProductTypes" class="form-control"></select>
    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="LiftingHeight"></label>
    <input asp-for="LiftingHeight" class="form-control" />
    <span asp-validation-for="LiftingHeight" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ClosedHeight"></label>
    <input asp-for="ClosedHeight" class="form-control" />
    <span asp-validation-for="ClosedHeight" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Stock"></label>
    <input asp-for="Stock" class="form-control" />
    <span asp-validation-for="Stock" class="text-danger"></span>
</div>

<button type="submit" class="btn btn-success mt-3">Save</button>
<a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
