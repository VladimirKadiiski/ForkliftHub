@model ForkliftHub.Models.MachineModel
    
<h1>Create Machine Model</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Brand" class="control-label">Brand</label>
        <select asp-for="Brand" asp-items="ViewBag.Brands" class="form-control"></select>
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
